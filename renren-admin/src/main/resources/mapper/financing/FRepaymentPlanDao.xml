<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.renren.modules.financing.dao.FRepaymentPlanDao">
    <resultMap id="BaseResultMap" type="io.renren.modules.financing.entity.FRepaymentPlan">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="financing_type" jdbcType="INTEGER" property="financingType" />
        <result column="financing_id" jdbcType="BIGINT" property="financingId" />
        <result column="plan_type" jdbcType="INTEGER" property="planType" />
        <result column="start_date" jdbcType="DATE" property="startDate"/>
        <result column="end_date" jdbcType="DATE" property="endDate" />
        <result column="repayment_of_principal" jdbcType="DECIMAL" property="repaymentOfPrincipal" />
        <result column="interest" jdbcType="DECIMAL" property="interest" />
        <result column="odd_corpus" jdbcType="DECIMAL" property="oddCorpus" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="creator" jdbcType="BIGINT" property="creator" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
    </resultMap>

    <select id="selectPrincipalPlan" resultType="io.renren.modules.financing.dto.FRepayPrincipalPlanDTO">
        SELECT id,financing_type,financing_id,
               plan_type,start_date,end_date,
               repayment_of_principal,odd_corpus
        FROM f_repayment_plan
        WHERE plan_type = 1
          AND financing_id = #{financingId}
          AND financing_type = #{financingType}
    </select>
    <select id="selectInterestPlan" resultType="io.renren.modules.financing.dto.FRepayInterestPlanDTO">
        SELECT id,financing_type,financing_id,
               plan_type,start_date,end_date,
               interest,remark
        FROM f_repayment_plan
        WHERE plan_type = 2
          AND financing_id = #{financingId}
          AND financing_type = #{financingType}
    </select>
    <select id="selectAllPlanId" resultType="java.lang.Long">
        SELECT id
        FROM f_repayment_plan
        WHERE financing_id = #{financingId}
          AND financing_type = #{financingType}
    </select>
    <delete id="deletePayPlan" >
        DELETE FROM f_repayment_plan
        WHERE financing_id = #{financingId}
        AND financing_type = #{financingType}
    </delete>
</mapper>